@inherits LayoutComponentBase
@using MudBlazor

<!-- Minimal layout with White Angel healthcare theme -->
<MudThemeProvider Theme="@_theme" IsDarkMode="false" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="background-color: #FFFFFF;">
        <MudText Typo="Typo.h6" Class="ml-3" Style="color: #1A1A1A;">Chatbot</MudText>
        <MudSpacer />
    </MudAppBar>
</MudLayout>

<div style="margin-top: 75px; display: flex; justify-content: center; align-items: center; background-color: #FFFFFF;">
    @Body
</div>

